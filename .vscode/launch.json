	"version": "0.2.0",
	"configurations": [

		{
			"name": "BrightScript Debug: Launch",
			"type": "brightscript",
			"request": "launch",
			"host": "${env:ROKU_HOST}",
			"password": "${env:ROKU_PASSWORD}",
			// "rootDir": "${workspaceFolder}/out",
			"envFile": "${workspaceFolder}/.vscode/.env",
			"rootDir": "${workspaceFolder}/dist/staging",
			"stagingDir": "${workspaceFolder}/dist/staging2",
			"packagePath": "${workspaceFolder}/dist/dev-out.zip",
			"retainStagingFolder": true,
			"injectRdbOnDeviceComponent": true,
			// "bsConst": {
			// 	"debug": true,
			// 	"logging": false
			// },
			"preLaunchTask": "npm: build dev"
		}
	]
}