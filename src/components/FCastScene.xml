<?xml version="1.0" encoding="utf-8"?>
<component name="FCastScene" extends="Scene">
	<script type="text/brightscript" uri="pkg:/source/utils/NetworkUtils.brs" />
	<script type="text/brightscript" uri="pkg:/components/FCastScene.brs" />

	<children>
		<Rectangle id="Background" width="1280" height="720" color="0x000000FF" />

		<Group id="BrandSection" translation="[150, 250]">
			<Poster id="Logo" uri="pkg:/images/logo.png" width="172" height="100" />

			<Label
				id="StatusLabel"
				text="Waiting for a connection"
				translation="[0, 150]"
				width="300"
				horizAlign="center"
				font="font:SmallSystemFont" />

			<BusySpinner
				id="Spinner"
				translation="[107, 190]"
				clockwise="false"
				uri="pkg:/images/busyspinner_hd.png"
				visible="false" />
		</Group>

		<Group id="ConnectionBox" translation="[700, 100]">
			<Rectangle width="450" height="520" color="0x1A1A1AFF" />

			<Label
				text="Connection Information"
				width="450"
				translation="[0, 20]"
				horizAlign="center"
				font="font:MediumBoldSystemFont" />

			<Rectangle width="400" height="1" color="0x333333FF" translation="[25, 60]" />

			<Label
				text="Scan with a FCast sender app"
				width="450"
				translation="[0, 80]"
				horizAlign="center"
				color="0xFFFFFFFF" />

			<Rectangle id="QRBackground" width="200" height="200" translation="[125, 130]"
				color="0xFFFFFFFF" />
			<Poster id="QRCode" uri="pkg:/images/qr_placeholder.png" width="180" height="180"
				translation="[135, 140]" />

			<Label
				text="Need a sender app?"
				width="450"
				translation="[0, 350]"
				horizAlign="center"
				size="18" />
			<Label
				text="Download Grayjay at https://grayjay.app"
				width="450"
				translation="[0, 380]"
				horizAlign="center"
				color="0x2196F3FF" />

			<Label
				text="Connection Details"
				width="450"
				translation="[0, 430]"
				horizAlign="center"
				font="font:MediumBoldSystemFont" />

			<Label id="ipAddress" translation="[100, 480]" font="font:SmallSystemFont" />
			<Label id="networkInterface" translation="[280, 480]" font="font:SmallSystemFont" />

			<Label text="Port" translation="[0, 510]" width="450" horizAlign="center"
				color="0xAAAAAAFF" />
			<Label text="46899 (TCP)" translation="[0, 540]" width="450" horizAlign="center" />
		</Group>
	</children>

</component>